@model IEnumerable<appCine.Models.pelicula>
@Styles.Render("~/Content/pelicula.css")

@{
    ViewBag.Title = "Index";

    string CurrentName = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Peliculas"]);
    dynamic Layout;
    switch (CurrentName)
    {
        case "User":
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
        default:
            //Admin layout
            Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
            break;
    }
}

<div class="wrapper-pelicula">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.duracion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sinopsis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lanzamiento)
            </th>

            <th>

                @Html.DisplayNameFor(model => model.imagen)

            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.genero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.duracion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.director)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sinopsis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lanzamiento)
                </td>
                <td>
                    <div style="width: 300px; height: 300px; overflow: hidden;">

                        <div style="width: 100%;height: 100%;background-size: cover;background-image: url(data:image/jpeg;base64,@item.imagen);
    "></div>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.categoria)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { Id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { Id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { Id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>